<Window x:Class="WPF.Controls.EmployeeCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Controls"
        mc:Ignorable="d"
        Title="Добавление сотрудника" Height="400" Width="300" ResizeMode="NoResize">
    <Grid>
        <local:EmployeeControl x:Name="employeeControl" Height="340" VerticalAlignment="Top"/>
        <Button x:Name="btnOk" Content="Ок" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="btnOk_Click"/>
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Click="btnCancel_Click"/>
    </Grid>
</Window>
