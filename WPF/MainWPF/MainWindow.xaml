<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWPF"
        xmlns:Controls="clr-namespace:WPF.Controls;assembly=WPF.Controls" x:Class="MainWPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <ListView x:Name="employeesListView" Margin="10,10,420,10" SelectionMode="Single" SelectionChanged="employeesListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="auto" Header="Сотрудник" DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Width="auto" Header="Департамент" DisplayMemberBinding="{Binding OfficeCategory}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Controls:EmployeeControl x:Name="employeesControl" Margin="0,10,10,130" HorizontalAlignment="Right" Width="405"/>
        
    </Grid>
</Window>
